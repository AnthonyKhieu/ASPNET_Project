@model IEnumerable<Category>
@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col6">
			<h1 class="text-secondary"> Category List </h1>
		</div>
		<div class="col6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-stripe	d" style="width: 100%; text-align:center">
	<thead>
		<tr>
			<th>CategoryName</th>
			<th>DisplayOrder</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var cate in Model)
		{
			<tr>
				<td width="50%">@cate.Name</td>
				<td width="30%">@cate.DisplayOrder</td>
				<td>
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@cate.Id" class="btn btn-info">
						<i class="bi bi-pencil-square"></i> Edit
					</a>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@cate.Id" class="btn btn-danger">
						<i class="bi bi-trash"></i> Delete
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>