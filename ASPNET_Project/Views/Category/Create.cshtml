@model Category

@{
    ViewData["Title"] = "Create";
}

<h1>Create <span class="text-primary"> Category </span></h1>
<hr />
<div class="row">
    <div class="col-md-4 border-1 p-3 mt-4" style="border-radius: 20px; border: solid">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 10px;">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger"> Back to List</a>
            </div>
        </form>
    </div>
</div>



